        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimthChat"
        mc:Ignorable="d"
        Title="MainWindow" Height="558" Width="682" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <Border BorderBrush="Black" BorderThickness="1">
        <Grid Margin="1,0,-1,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="551*"/>
                    <ColumnDefinition Width="129*"/>
                </Grid.ColumnDefinitions>
                <local:test1 ClipToBounds="True"/>
                <TextBox Grid.Column="1" TextWrapping="Wrap" Text="TextBox"/>
            </Grid>
        </Grid>
    </Border>
